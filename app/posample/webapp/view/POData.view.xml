<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="ust.po.sample.posample.controller.POData">

    <Page id="PODataPage" title="PO Data" >
        <content>

            <Table id="poTable" inset="false" items="{poModel>/POHeaders}">
                <columns>
                    <Column id="_IDGenColumn"><Text id="_IDGenText1" text="PO Number" /></Column>
                    <Column id="_IDGenColumn1"><Text id="_IDGenText2" text="Company Code" /></Column>
                    <Column id="_IDGenColumn2"><Text id="_IDGenText3" text="Delivery Date" /></Column>
                    <Column id="_IDGenColumn3"><Text id="_IDGenText4" text="Status" /></Column>
                </columns>

                <items>
                    <ColumnListItem id="_IDGenColumnListItem">
                        <cells>
                            <Text id="_IDGenText5" text="{poModel>po_number}" />
                            <Text id="_IDGenText6" text="{poModel>po_coco}" />
                            <Text id="_IDGenText7" text="{path:'poModel>po_delivery_date', type:'sap.ui.model.type.Date'}" />
                            <Text id="_IDGenText8" text="{poModel>po_status}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>

        </content>
    </Page>

</mvc:View>
