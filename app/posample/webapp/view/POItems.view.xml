<mvc:View
    height="100%"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="ust.po.sample.posample.controller.POItems"
>
    <Page
        id="_IDGenPage3"
        title="Purchase Order"
    >
        <headerContent>
            <Button
                id="iii"
                text="Activate"
                type="Emphasized"
                press="onActivate"
                enabled="{= ${poModel>IsActiveEntity} === false }"
            />
            <Button
            id="delete"
    text="Delete"
    icon="sap-icon://delete"
    type="Transparent"
    press="onDelete"/>
        </headerContent>
        <ObjectHeader
            id="_IDGenObjectHeader1"
            title="PO Number: {poModel>po_number}"
            intro="Company Code: {poModel>po_coco}"
            number="{poModel>po_status}"
            numberState="Information"
            responsive="true"
            class="sapUiResponsivePadding--header"
        >
            <ObjectAttribute
                id="_IDGenObjectAttribute1"
                title="Delivery Date"
                text="{ path: 'poModel>po_delivery_date', type: 'sap.ui.model.type.Date' }"
            />

            <headerContainer>
                <IconTabBar
                    id="_IDGenIconTabBar1"
                    selectedKey="items"
                >
                    <items>
                        <IconTabFilter
                            id="_IDGenIconTabFilter1"
                            text="Items"
                            key="items"
                        >
                            <l:VerticalLayout
                                id="_IDGenVerticalLayout1"
                                width="100%"
                            >
                                <l:content>
                                    <!-- ðŸ”‘ Association binding -->
                                    <Table
                                        id="_IDGenTable"
                                        items="{poModel>to_poitem}"
                                    >
                                        <columns>
                                            <Column id="_IDGenColumn17">
                                                <Text
                                                    id="_IDGenText28"
                                                    text="Line Item"
                                                />
                                            </Column>
                                            <Column id="_IDGenColumn18">
                                                <Text
                                                    id="_IDGenText29"
                                                    text="Material"
                                                />
                                            </Column>
                                            <Column id="_IDGenColumn19">
                                                <Text
                                                    id="_IDGenText30"
                                                    text="Description"
                                                />
                                            </Column>
                                            <Column id="_IDGenColumn20">
                                                <Text
                                                    id="_IDGenText32"
                                                    text="Quantity"
                                                />
                                            </Column>
                                            <Column id="_IDGenColumn21">
                                                <Text
                                                    id="_IDGenText35"
                                                    text="Status"
                                                />
                                            </Column>
                                        </columns>

                                        <items>
                                            <ColumnListItem
                                                id="_IDGenColumnListItem6"
                                            >
                                                <cells>
                                                    <Text
                                                        id="_IDGenText36"
                                                        text="{poModel>po_lineitem_number}"
                                                    />
                                                    <Text
                                                        id="_IDGenText37"
                                                        text="{poModel>po_item_materials}"
                                                    />
                                                    <Text
                                                        id="_IDGenText38"
                                                        text="{poModel>po_item_materialsdesc}"
                                                    />
                                                    <Text
                                                        id="_IDGenText39"
                                                        text="{poModel>po_item_quan}"
                                                    />
                                                    <Text
                                                        id="_IDGenText40"
                                                        text="{poModel>po_item_status}"
                                                    />
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </l:content>
                            </l:VerticalLayout>
                        </IconTabFilter>
                    </items>
                </IconTabBar>
            </headerContainer>
        </ObjectHeader>
    </Page>
</mvc:View>
