<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="ust.po.sample.posample.controller.MasterData">

    <Page
        id="MasterDataPage"
        title="Material Master Data"
        class="sapUiContentPadding">

        <content>
            <Table
                id="materialTable"
                inset="false"
                items="{/Materials}"
                growing="true"
                growingScrollToLoad="true"
                class="sapUiResponsiveContentPadding">

                <!-- Column definitions -->
                <columns>
                    <Column id="_IDGenColumn4" width="12rem">
                        <Text id="_IDGenText15" text="Material Code"/>
                    </Column>

                    <Column id="_IDGenColumn9" minScreenWidth="Tablet" demandPopin="true">
                        <Text id="_IDGenText17" text="Material Description"/>
                    </Column>

                    <Column id="_IDGenColumn14"
                        hAlign="Center"
                        width="8rem"
                        minScreenWidth="Tablet"
                        demandPopin="true">
                        <Text id="_IDGenText24" text="GST No"/>
                    </Column>

                    <Column id="_IDGenColumn15"
                        hAlign="Center"
                        width="7rem">
                        <Text id="_IDGenText25" text="Status"/>
                    </Column>
                </columns>

                <!-- Row template -->
                <items>
                    <ColumnListItem id="_IDGenColumnListItem5"
                        type="Navigation"
                        press="materialToPoItem">

                        <cells>
                            <ObjectIdentifier id="_IDGenObjectIdentifier"
                                title="{mm_code}"
                                text="{mm_desc}"/>

                            <Text id="_IDGenText26"
                                text="{mm_desc}"
                                wrapping="false"/>

                            <Text id="_IDGenText27"
                                text="{mm_gstno}"
                                textAlign="Center"/>

                            <ObjectStatus id="_IDGenObjectStatus1"
                                text="{= ${is_Active} ? 'Active' : 'Inactive'}"
                                state="{= ${is_Active} ? 'Success' : 'Error'}"/>
                        </cells>
                    </ColumnListItem>
                </items>

            </Table>
        </content>
    </Page>
</mvc:View>
